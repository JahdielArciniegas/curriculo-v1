---
import Section from "../Section.astro";

import {certificates} from '@cv'
---

<Section title="Certificaciones">
    <ul>
        {certificates.map(({name, date, issuer,}) =>{
            return(
                <li>
                    <article>
                        <header>
                            <div>
                                <h3>{name}</h3>
                                <h4>{issuer}</h4>
                            </div>
                            <time>{date}</time>
                        </header>
                    </article>
                </li>
            )
        })}
    </ul>
</Section>

<style>
    ul{
        display: flex;
        flex-direction: column;
        gap: 32px;
    }

    article h3{
        font-weight: 500;
        color: #111;
    }

    article h4{
        color:#222;
        font-weight: 400;
    }
    header {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 4px;
    }

    time{
        color: #555;
        font-size: 0.85rem;
    }
</style>